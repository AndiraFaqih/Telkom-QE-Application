<p class="text-xl pb-3"><i class="fas fa-list mr-3"></i> My Proposal</p>

<div class="flex justify-between">
  <div class="mb-3 xl:w-96">
    <select
      id="status-proposal"
      name="status"
      class="mt-1 block w-48 py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
    >
      <!-- <option value=""disabled selected hidden>Filter By Status</option> -->
      <option value="all">ALL</option>
      <option value="submitted">SUBMITTED</option>
      <option value="approved">APPROVED</option>
      <option value="redesign">REDESIGN</option>
      <option value="rejected">REJECTED</option>
      <option value="installation">INSTALLATION</option>
      <option value="closed">CLOSED</option>
    </select>
  </div>
  <div class="mb-3 xl:w-96">
    <input
      type="search"
      class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
      id="exampleSearch"
      placeholder="Search By QE ID"
    />
  </div>
</div>

<div class="max-w rounded overflow-hidden shadow-lg bg-white mt-2">
  <div class="flex flex-col">
    <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full sm:px-6 lg:px-8">
        <div class="overflow-hidden">
          <table
            id="proposalTable"
            class="min-w-full text-center"
            style="width: 150px"
          >
            <thead class="bg-gray-800 text-white">
              <tr>
                <th
                  class="text-center py-3 px-4 uppercase font-semibold text-sm"
                >
                  QE ID
                </th>
                <th
                  class="text-center py-3 px-4 uppercase font-semibold text-sm whitespace-nowrap"
                >
                  Nama STO
                </th>
                <th
                  class="text-center py-3 px-4 uppercase font-semibold text-sm"
                >
                  Segmen
                </th>
                <th
                  class="text-center py-3 px-4 uppercase font-semibold text-sm"
                >
                  Nama Alpro
                </th>
                <th
                  class="text-center py-3 px-4 uppercase font-semibold text-sm"
                >
                  Jenis QE
                </th>
                <th
                  class="text-center py-3 px-4 uppercase font-semibold text-sm whitespace-nowrap"
                >
                  koordinat ODP Baru
                </th>
                <th
                  class="text-center py-3 px-4 uppercase font-semibold text-sm"
                >
                  Keterangan
                </th>
                <th
                  class="text-center py-3 px-4 uppercase font-semibold text-sm"
                >
                  Status
                </th>
                <th
                  class="text-center py-3 px-4 uppercase font-semibold text-sm"
                >
                  Action
                </th>
              </tr>
            </thead>
            <tbody id="result">
              <% var isDataAvailable = false; proposal.forEach(function
              (proposal, index) { isDataAvailable = true; %>
              <tr class="bg-white border-b text-center">
                <td
                  id="qeIdInput"
                  class="qe-id list text-sm text-gray-900 font-medium px-6 py-4 whitespace-nowrap"
                >
                  <%= proposal.idProposal %>
                </td>
                <td
                  class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"
                >
                  <%= proposal.namaSTO %>
                </td>
                <td
                  class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"
                >
                  <%= proposal.segmen %>
                </td>
                <td
                  class="text-sm text-gray-900 font-medium px-6 py-4 whitespace-nowrap"
                >
                  <%= proposal.namaAlpro %>
                </td>
                <td
                  class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"
                >
                  <%= proposal.jenisQE %>
                </td>
                <td
                  class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"
                >
                  <%= proposal.koordinatODPBaru %>
                </td>
                <td
                  class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"
                >
                  <%= proposal.keterangan %>
                </td>
                <td
                  id="td7"
                  class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"
                >
                  <%= proposal.status %>
                </td>
                <td
                  class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"
                >
                  <a
                    type="button"
                    class="inline-block px-6 py-2.5 bg-blue-400 text-white font-medium font-bold text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-500 hover:shadow-lg focus:bg-blue-500 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-600 active:shadow-lg transition duration-150 ease-in-out"
                    href="/myproposal/<%= proposal._id %>"
                    >Detail</a
                  >
                </td>
              </tr>
              <% }); if (!isDataAvailable) { %>
              <tr>
                <td id="td9" colspan="9" class="text-center py-3 px-4">
                  No data available
                </td>
              </tr>
              <% } %>
            </tbody>
            <tfoot>
              <tr style="display: none">
                <td
                  colspan="9"
                  class="text-center text-gray-900 font-light px-6 py-4 whitespace-nowrap"
                >
                  Data Not Found
                </td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document
    .querySelector("#exampleSearch")
    .addEventListener("input", filterList);

  function filterList() {
    const searchInput = document.querySelector("#exampleSearch");
    const filter = searchInput.value.toLowerCase();
    const table = document.querySelector("table");
    const list = document.querySelectorAll(".list");
    const noData = table.querySelector("tfoot tr");

    let matchFound = false;
    const select = document.getElementById("status-proposal");
    const selectedStatus = select.value;
    list.forEach((item) => {
      let text = item.textContent;
      let status = item.parentElement
        .querySelector("#td7")
        .textContent.trim()
        .toLowerCase();
      if (status === selectedStatus || selectedStatus === "all") {
        if (text.toLocaleLowerCase().includes(filter)) {
          item.parentElement.style.display = "";
          matchFound = true;
        } else {
          item.parentElement.style.display = "none";
        }
      } else {
        item.parentElement.style.display = "none";
      }
    });
    if (matchFound) {
      noData.style.display = "none";
    } else {
      noData.style.display = "";
    }
  }

  const select = document.getElementById("status-proposal");
  const tableRows = document.querySelectorAll("#proposalTable tbody tr");
  select.addEventListener("change", () => {
    const selectedStatus = select.value;
    tableRows.forEach((row) => {
      const statusCell = row.querySelector("#td7");
      const noDataAvailable = row.querySelector("#td9");
      const statusText = statusCell.textContent.trim().toLocaleLowerCase();
      if (statusText === selectedStatus || selectedStatus === "all") {
        row.style.display = "";
      } else {
        row.style.display = "none";
      }
    });
    filterList();
  });
</script>

