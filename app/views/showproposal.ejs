<p class="text-xl pb-3 flex items-center">
  <i class="fas fa-list mr-3"></i> My Proposal
</p>
<div class="max-w rounded overflow-hidden shadow-lg bg-white">
  <div class="flex flex-col">
    <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full sm:px-6 lg:px-8">
        <div class="overflow-hidden">
          <table class="min-w-full text-center" style="width: 150px">
            <thead class="bg-gray-800 text-white">
              <tr>
                <th
                  class="text-center py-3 px-4 uppercase font-semibold text-sm"
                >
                  ID Proposal
                </th>
                <th
                  class="text-center py-3 px-4 uppercase font-semibold text-sm"
                >
                  Nama STO
                </th>
                <th
                  class="text-center py-3 px-4 uppercase font-semibold text-sm"
                >
                  Segmen
                </th>
                <th
                  class="text-center py-3 px-4 uppercase font-semibold text-sm"
                >
                  Nama Alpro
                </th>
                <th
                  class="text-center py-3 px-4 uppercase font-semibold text-sm"
                >
                  Jenis QE
                </th>
                <th
                  class="text-center py-3 px-4 uppercase font-semibold text-sm"
                >
                  koordinat ODP Baru
                </th>
                <th
                  class="text-center py-3 px-4 uppercase font-semibold text-sm"
                >
                  Keterangan
                </th>
                <th
                  class="text-center py-3 px-4 uppercase font-semibold text-sm"
                >
                  Status
                </th>
                <th
                  class="text-center py-3 px-4 uppercase font-semibold text-sm"
                >
                  Action
                </th>
              </tr>
            </thead>
            <tbody>
              <%
                var isDataAvailable = false;
                proposal.forEach(function (proposal, index) {
                    isDataAvailable = true;
              %>
                <tr class="bg-white border-b text-center">
                  <td class="text-sm text-gray-900 font-medium px-6 py-4 whitespace-nowrap">
                    <%= proposal.idProposal %>
                  </td>
                  <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                    <%= proposal.namaSTO %>
                  </td>
                  <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                    <%= proposal.segmen %>
                  </td>
                  <td class="text-sm text-gray-900 font-medium px-6 py-4 whitespace-nowrap">
                    <%= proposal.namaAlpro %>
                  </td>
                  <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                    <%= proposal.jenisQE %>
                  </td>
                  <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                    <%= proposal.koordinatODPBaru %>
                  </td>
                  <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                    <%= proposal.keterangan %>
                  </td>
                  <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                    <%= proposal.keterangan %>
                  </td>
                  <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                    <a type="button" class="inline-block px-6 py-2.5 bg-blue-400 text-white font-medium font-bold text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-500 hover:shadow-lg focus:bg-blue-500 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-600 active:shadow-lg transition duration-150 ease-in-out" 
                       href="/myproposal/<%= proposal._id %>"
                       >Detail</a>
                  </td>
                </tr>
              <%
                });
                if (!isDataAvailable) {
              %>
                <tr>

                  <td colspan="9" class="text-center py-3 px-4">No data available</td>

                </tr>
              <%
                }
              %>
            </tbody>   
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./js/js.ejs') %>
