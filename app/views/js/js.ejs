        var optionArray = ['SMTODCA|ODC-SMT-FA', 'SMTODCB|ODC-SMT-FB', 'SMTODCC|ODC-SMT-FC']
    }

    else if(sel1.value === "JHR" && sel2.value === "ODC"){
        var optionArray = ['JHRODCA|ODC-JHR-FA', 'JHRODCB|ODC-JHR-FB', 'JHRODCC|ODC-JHR-FC']
    }
    
    else if(sel1.value === "MJB" && sel2.value === "ODC"){
